---
import Logo from "../svg/Logo.astro";
---

<header>
  <Logo FillColor="#fff" />
</header>

<style>
  header {
    height: 90px;
    justify-content: stretch;
    align-items: stretch;
    flex-direction: column;
    display: flex;
    box-shadow: 0px 0px 5px 1px rgb(29, 29, 29);
    z-index: 5;
    position: relative;
    background-color: #590f7e;
  }
  img {
    width: 100%;
    object-fit: cover;
    height: 200px;
  }

  @media (pointer: coarse) or (max-width: 700px) {
    header {
      height: 70px;
    }
  }
</style>
