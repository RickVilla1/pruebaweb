---
import Header from './Header.astro';

interface Props {
	title: string;
	initRoute: string;
}

const { title } = Astro.props;
import '../css/app.css'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header class="animate__animated animate__fadeInDown"></Header>
		<div class="animate__animated animate__fadeInDownBig" id="ContentView"><div><slot/></div></div>
	</body>
	<script is:inline type="module" src="/js/app.js"></script>
	<script type="module">
		ManagerHistory.pushState({initRoute});
	</script>
</html>
