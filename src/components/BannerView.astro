---
interface Props {
    image: string;
    text: string;
  }
  const { image, text } = Astro.props;
---
<div class="banner-view-view">
  <img
    src={image}
    alt="Banner Image"
    class="banner-view-image"
  />
  <div class="banner-view-text">
    <h1>{text}</h1>
  </div>
</div>

<style>
  .banner-view-view {
    position: relative;
    width: 100%;
    height: 180px; /* Puedes ajustar la altura según tus necesidades */
    overflow: hidden;
  }

  .banner-view-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.2) blur(2px) contrast(0.8);
  }

  .banner-view-text {
    font-size: 20px;
    width: 100%;
    padding-left: 60px;
    padding-right: 60px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: rgb(255, 255, 255); /* El color del texto puede ajustarse según la imagen de fondo */
  }
</style>
